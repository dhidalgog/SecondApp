<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table class="table table-hover">
  <thead>
    <tr class="table-primary">
      <th>Name </th>
      <th>Age</th>
      <th>Mail</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.age %></td>
        <td><%= student.mail %></td>
        <td><button type="button" class="btn btn-primary btn-sm"><%= link_to 'Show', student %></button></td>
        <td><button type="button" class="btn btn-info btn-sm"><%= link_to 'Edit', edit_student_path(student) %></button></td>
        <td><button type="button" class="btn btn-danger btn-sm"><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

